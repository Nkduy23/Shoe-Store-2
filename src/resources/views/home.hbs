          <label for="quantity-{{_id}}">Quantity:</label>
          <input type="number" id="quantity-{{_id}}" name="quantity" min="1" value="1">
          <button type="submit">Buy</button>
        </form>
      </div>
    </div>
  {{/each}}
</div>
