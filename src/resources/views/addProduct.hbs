<form action="/addProduct" method="POST" enctype="multipart/form-data" id="product-form" class="product-form">
  <label for="product-name">Tên sản phẩm:</label>
  <input type="text" id="product-name" name="name" required />

  <label for="product-description">Mô tả sản phẩm:</label>
  <textarea id="product-description" name="description" required placeholder="Mô tả sản phẩm..."></textarea>

  <label for="product-price">Giá sản phẩm:</label>
  <input type="number" id="product-price" name="price" required />

  <label for="sale-percent">Phần trăm giảm giá:</label>
  <input type="number" id="sale-percent" name="sale" required />

  <label for="product-sale">Sản phẩm có sale không?</label>

  <input type="checkbox" id="product-sale" name="isSale" />
  <label for="product-colors">Màu sắc (cách nhau bởi dấu phẩy):</label>
  <input type="text" id="product-colors" name="colors" placeholder="Ví dụ: red, gray" required />

  <label for="product-images">Chọn ảnh sản phẩm:</label>
  <input type="file" id="product-images" name="image" accept="image/*" multiple required />

  <button type="submit">Lưu sản phẩm</button>
</form>